<style>
    .title {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 50px;
    }

    .locations-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
        margin: 0 20px;
        position: relative;
    }

    .locations-container::after {
        content: '';
        position: absolute;
        bottom: -20px; /* Puoi regolare questa distanza */
        left: 0;
        width: 100%;
        height: 30px; /* Altezza della sfumatura */
        background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.1) 100%); /* Sfumatura leggera */
        pointer-events: none; /* Assicurati che non interferisca con il clic sugli elementi */
    }

    .location-item {
        padding: 16px 24px;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .locations-container {
            gap: 12px;
        }

        .location-item {
            font-size: 1rem;
            padding: 14px 18px;
        }
    }
</style>
